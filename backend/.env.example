# Market Data Configuration
# Get your free API key from https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=demo

# Primary data provider: "alpha_vantage" (production) or "yfinance" (development/testing)
MARKET_DATA_PROVIDER=yfinance

# How often to fetch market data (in minutes)
UPDATE_INTERVAL_MINUTES=15

# How long to cache portfolio valuations (in minutes)
CACHE_TTL_MINUTES=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Market Data Settings
# Australian market hours (AEST/AEDT)
MARKET_OPEN_TIME=09:30:00
MARKET_CLOSE_TIME=16:00:00
MARKET_TIMEZONE=Australia/Sydney

# API Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_DAY=500
MAX_REQUESTS_PER_MINUTE=5

# SSE Configuration
# Heartbeat interval in seconds
SSE_HEARTBEAT_INTERVAL=30
# Connection timeout in seconds
SSE_CONNECTION_TIMEOUT=600
# Maximum SSE connections per user
MAX_SSE_CONNECTIONS_PER_USER=50

# Development Settings
ENABLE_MOCK_DATA=false
LOG_LEVEL=INFO
DEBUG_MARKET_DATA=false

# Production Notes:
# - Set ALPHA_VANTAGE_API_KEY to your actual API key
# - Change MARKET_DATA_PROVIDER to "alpha_vantage" for production
# - Consider increasing CACHE_TTL_MINUTES for production to reduce API usage
# - Set RATE_LIMIT_ENABLED=true in production
# - Adjust LOG_LEVEL to "WARNING" or "ERROR" in production